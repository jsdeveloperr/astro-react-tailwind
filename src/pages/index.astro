---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import CartList from "../components/cart-list.astro";
import CartSkeleton from "../components/cart-list-skeleton.astro";
import OrderSummary from "../components/order-summary.astro";
import RelatedProducts from "../components/related-products.astro";

export const prerender = false;
---

  <Layout title="Ana Sayfa">
    <main class="mx-auto max-w-2xl px-4 pb-24 pt-16 sm:px-6 lg:max-w-7xl lg:px-8">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Shopping Cart</h1>
  
      <form class="mt-12 lg:grid lg:grid-cols-12 lg:items-start lg:gap-x-12 xl:gap-x-16">
        <section aria-labelledby="cart-heading" class="lg:col-span-7">
          <CartList server:defer>
            <CartSkeleton slot="fallback" />
          </CartList>	
        </section>
  
        <OrderSummary />
      </form>
  
      <RelatedProducts />
    </main>
  </Layout>
